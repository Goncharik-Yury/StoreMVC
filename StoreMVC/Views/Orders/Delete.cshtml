@model StoreMVC.Models.Order

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Delete</title>
</head>
<body>
	@Html.Partial("_BackToListButtonPartial")<br />
	<h3>Are you sure you want to delete this order?</h3>
	<br />
	<div class="row">
		<div class="col-md-9">
			<div>
				<b>@Html.DisplayNameFor(model => model.UserProfile.UserName):</b> @Html.DisplayFor(model => model.UserProfile.UserName)
			</div>
			<div>
				<b>@Html.DisplayNameFor(model => model.Product.Name):</b> @Html.DisplayFor(model => model.Product.Name)
			</div>
			<div>
				<b>@Html.DisplayNameFor(model => model.Date):</b> @Html.DisplayFor(model => model.Date)
			</div>
			<br />

			@*<div>
					@Html.DisplayFor(model => model.Category)
				</div>*@
			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()

				<div class="form-actions no-color">
					<input type="submit" value="Delete" class="btn btn-default" />
				</div>
			}
		</div>
	</div>
</body>
</html>
