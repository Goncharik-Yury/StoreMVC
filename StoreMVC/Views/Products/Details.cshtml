@model StoreMVC.Models.Product

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Details</title>
</head>
<body>
	@Html.Partial("_BackButtonPartial", "Back")<br /><br /><br />
	<div class="row">
		<div class="col-md-3">
			<img src=@Html.DisplayFor(model => model.imgName) class="img-responsive img-rounded" />
		</div>
		<div class="col-md-9">
			<div>
				<b>@Html.DisplayFor(model => model.Name)</b>
			</div>

			<div>
				@Html.DisplayFor(model => model.Description)
			</div>
			<br />
			<div>
				<b>@Html.DisplayNameFor(model => model.Price): @Html.DisplayFor(model => model.Price) р.</b>
			</div>
			<div>
				<b>@Html.DisplayNameFor(model => model.Count): @Html.DisplayFor(model => model.Count)</b>
			</div>
			<br />
			@*<div>
					@Html.DisplayFor(model => model.Category)
				</div>*@
			<div class="btn-group">
				@Html.Partial("_AddToBagButtonPartial", Model.ProductId)
				<br/>
				@if (User.IsInRole("Moderator") || User.IsInRole("Admin"))
				{
					@Html.Partial("_EditButtonPartial", Model.ProductId)
					@Html.Partial("_DeleteButtonPartial", Model.ProductId);
				}
			</div>
		</div>
	</div>

</body>
</html>
