@model StoreMVC.Models.RegisterModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-signin" }))
{
	@Html.AntiForgeryToken()
	@*@Html.ValidationSummary()*@
	@Html.ValidationMessage("General", new { @class = "text-danger" })


	<div>
		<div class="form-group">
			<h2>Create a new account.</h2>
		</div>
		<div class="form-group">
			@Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username" })
			@Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
		</div>
		<div class="form-group">
			@Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
			@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
		</div>
		<div class="form-group">
			@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Password again" })
			@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
		</div>
		<div class="form-group">
			@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First name" })
			@Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
		</div>
		<div class="form-group">
			@Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last name" })
			@Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
		</div>
		<div class="form-group">
			@Html.TextBoxFor(m => m.Patronymic, new { @class = "form-control", placeholder = "Patronymic" })
			@Html.ValidationMessageFor(m => m.Patronymic, "", new { @class = "text-danger" })
		</div>
		<div class="form-group">
			@Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
			@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
		</div>
		<div class="form-group">
			<div>
				@Html.LabelFor(model => model.Captcha)
			</div>
			<img src='@Url.Action("Captcha", "Account")' alt='captcha' />
			<div>
				@Html.TextBoxFor(model => model.Captcha, new { @class = "form-control", placeholder = "Simbols from image" })
				@Html.ValidationMessageFor(m => m.Captcha, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			<input type="submit" value="Register" class="btn btn-lg btn-primary btn-block" />
		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
